<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kmu.syncpos.controllers.CustomerManagementController">
    <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
    <top>
        <Label text="Customer Management" BorderPane.alignment="CENTER">
            <font><Font name="System Bold" size="24.0" /></font>
            <padding><Insets bottom="15.0" /></padding>
        </Label>
    </top>
    <center>
        <VBox spacing="10.0">
            <children>
                <TextField fx:id="searchField" promptText="Search customers by name, email, or phone..." />
                <TableView fx:id="customerTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Name" />
                        <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email" />
                        <TableColumn fx:id="phoneColumn" prefWidth="120.0" text="Phone" />
                        <TableColumn fx:id="loyaltyCol" text="Loyalty Points" />
                    </columns>
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>
    <right>
        <VBox minWidth="380.0" spacing="15.0">
            <BorderPane.margin><Insets left="15.0" /></BorderPane.margin>
            <padding><Insets top="35" /></padding>
            <children>
                <TabPane fx:id="detailsTabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>
                        <Tab text="Details">
                            <content>
                                <VBox spacing="15.0"><padding><Insets top="10"/></padding>
                                    <GridPane hgap="10" vgap="10">
                                        <Label text="Name" GridPane.rowIndex="0" />
                                        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                        <Label text="Email" GridPane.rowIndex="1" />
                                        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Label text="Phone" GridPane.rowIndex="2" />
                                        <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                        <Label text="Address" GridPane.rowIndex="3" />
                                        <TextArea fx:id="addressArea" prefHeight="80" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                        <Label text="Loyalty Pts" GridPane.rowIndex="4" />
                                        <TextField fx:id="loyaltyField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                    </GridPane>
                                    <HBox alignment="CENTER" spacing="10.0">
                                        <padding><Insets top="20.0" /></padding>
                                        <Button fx:id="newButton" onAction="#handleNew" text="New" prefWidth="80" />
                                        <Button fx:id="saveButton" onAction="#handleSave" text="Save" prefWidth="80" />
                                        <Button fx:id="deleteButton" onAction="#handleDelete" text="Delete" prefWidth="80"
                                                style="-fx-background-color: #FF6347;" />
                                    </HBox>
                                </VBox>
                            </content>
                        </Tab>
                        <Tab text="Purchase History">
                            <content>
                                <TableView fx:id="purchaseHistoryTableView">
                                    <columns>
                                        <TableColumn fx:id="historyDateCol" text="Date" />
                                        <TableColumn fx:id="historyTotalCol" text="Total" />
                                        <TableColumn fx:id="historyItemsCol" text="Items" />
                                    </columns>
                                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                                </TableView>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </VBox>
    </right>
</BorderPane>
