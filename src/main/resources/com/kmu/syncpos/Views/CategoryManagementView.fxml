<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kmu.syncpos.controllers.CategoryManagementController">
    <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
    <top>
        <Label text="Category Management" BorderPane.alignment="CENTER">
            <font><Font name="System Bold" size="24.0" /></font>
            <padding><Insets bottom="15.0" /></padding>
        </Label>
    </top>
    <center>
        <SplitPane dividerPositions="0.4">
            <items>
                <VBox spacing="10.0">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Category Hierarchy" />
                        <TreeView fx:id="categoryTreeView" VBox.vgrow="ALWAYS" />
                        <HBox spacing="5">
                            <Button fx:id="addRootButton" onAction="#handleAddRootButton" text="Add Root Category" />
                            <Button fx:id="addSubButton" onAction="#handleAddSubButton" text="Add Sub-Category" />
                        </HBox>
                    </children>
                </VBox>
                <VBox spacing="15.0">
                    <padding><Insets left="15.0" /></padding>
                    <children>
                        <Label fx:id="detailsLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Select a category to view details" />
                        <GridPane fx:id="detailsPane" hgap="10" vgap="10" visible="false">
                            <Label text="Name" GridPane.rowIndex="0" />
                            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                            <Label text="Description" GridPane.rowIndex="1" />
                            <TextArea fx:id="descriptionArea" prefHeight="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            <Label text="Parent Category" GridPane.rowIndex="2" />
                            <Label fx:id="parentCategoryLabel" text="[Parent Name]" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                     <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                     </rowConstraints>
                        </GridPane>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Button fx:id="saveButton" onAction="#handleSave" style="-fx-background-color: blue;" text="Save Changes"  />
                            <Button fx:id="changeParentButton" onAction="#handleChangeParent" text="Change Parent" />
                            <Button fx:id="deleteButton" onAction="#handleDelete" style="-fx-background-color: #FF6347;" text="Delete Selected" />
                        </HBox>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>
