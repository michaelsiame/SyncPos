<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kmu.syncpos.controllers.ProductManagementController">
    <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
    <top>
        <Label text="Product Management" BorderPane.alignment="CENTER">
            <font><Font name="System Bold" size="24.0" /></font>
            <padding><Insets bottom="15.0" /></padding>
        </Label>
    </top>
    <center>
        <VBox spacing="10.0">
            <children>
                <TextField fx:id="searchField" promptText="Search products by name, SKU, or barcode..." />
                <TableView fx:id="productTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="skuCol" text="SKU" />
                        <TableColumn fx:id="nameCol" prefWidth="200.0" text="Name" />
                        <TableColumn fx:id="categoryCol" text="Category" />
                        <TableColumn fx:id="sellingPriceCol" text="Selling Price" />
                        <TableColumn fx:id="purchasePriceCol" text="Purchase Price" />
                        <TableColumn fx:id="stockCol" text="Stock" />
                        <TableColumn fx:id="activeCol" text="Active" />
                    </columns>
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>
    <right>
        <VBox minWidth="350.0" spacing="15.0">
            <BorderPane.margin><Insets left="15.0" /></BorderPane.margin>
            <padding><Insets top="35" /></padding>
            <children>
                <Label text="Product Details"><font><Font name="System Bold" size="16.0" /></font></Label>
                <TabPane fx:id="detailsTabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>
                        <Tab text="Basic Info">
                            <content>
                                <GridPane hgap="10" vgap="10">
                                    <padding>
                                        <Insets top="10" />
                                    </padding>
                                    <Label text="Name" GridPane.rowIndex="0" />
                                    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    <Label text="SKU" GridPane.rowIndex="1" />
                                    <TextField fx:id="skuField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    <Label text="Barcode" GridPane.rowIndex="2" />
                                    <TextField fx:id="barcodeField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <Label text="Category" GridPane.rowIndex="3" />
                                    <ComboBox fx:id="categoryComboBox" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    <Label text="Unit" GridPane.rowIndex="4" />
                                    <ComboBox fx:id="unitComboBox" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                    <!-- ADDED: Product Type ComboBox -->
                                    <Label text="Product Type" GridPane.rowIndex="5" />
                                    <ComboBox fx:id="productTypeComboBox" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                                    <!-- ADDED: Supplier ComboBox -->
                                    <Label text="Supplier" GridPane.rowIndex="6" />
                                    <ComboBox fx:id="supplierComboBox" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                                    <Label text="Description" GridPane.rowIndex="7" />
                                    <TextArea fx:id="descriptionArea" prefHeight="80" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                                    <CheckBox fx:id="activeCheckBox" text="Is Active" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                                </GridPane>
                            </content>
                        </Tab>
                        <Tab text="Pricing &amp; Stock">
                            <content>
                                <GridPane hgap="10" vgap="10"><padding><Insets top="10"/></padding>
                                    <Label text="Selling Price" GridPane.rowIndex="0" />
                                    <TextField fx:id="sellingPriceField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    <Label text="Purchase Price" GridPane.rowIndex="1" />
                                    <TextField fx:id="purchasePriceField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    <Label text="Tax Rate (%)" GridPane.rowIndex="2" />
                                    <TextField fx:id="taxRateField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <Label text="Min. Stock Level" GridPane.rowIndex="3" />
                                    <TextField fx:id="minStockField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    <Label text="Reorder Qty" GridPane.rowIndex="4" />
                                    <TextField fx:id="reorderQtyField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                    <Label text="Initial Stock" GridPane.rowIndex="5" />
                                    <TextField fx:id="initialStockField" promptText="Only for new products" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                </GridPane>
                            </content>
                        </Tab>
                        <Tab text="History">
                            <content>
                                <VBox spacing="10"><padding><Insets top="10"/></padding>
                                    <Label text="Inventory Adjustments"/>
                                    <TableView fx:id="inventoryHistoryTableView" prefHeight="150">
                                        <columns>
                                            <TableColumn text="Date" fx:id="invDateCol"/>
                                            <TableColumn text="Qty Delta" fx:id="invQtyCol"/>
                                            <TableColumn text="Reason" fx:id="invReasonCol"/>
                                            <TableColumn text="User" fx:id="invUserCol"/>
                                        </columns>
                                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                                    </TableView>
                                    <Label text="Price History"/>
                                    <TableView fx:id="priceHistoryTableView" prefHeight="150">
                                        <columns>
                                            <TableColumn text="Date" fx:id="priceDateCol"/>
                                            <TableColumn text="Old Price" fx:id="priceOldCol"/>
                                            <TableColumn text="New Price" fx:id="priceNewCol"/>
                                            <TableColumn text="Changed By" fx:id="priceUserCol"/>
                                        </columns>
                                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                                    </TableView>
                                </VBox>
                            </content>
                        </Tab>
                        <Tab text="Suppliers">
                            <content>
                                <VBox spacing="10.0">
                                    <padding><Insets top="10" right="5" bottom="5" left="5"/></padding>
                                    <Label text="Manage supplier-specific codes for this product." wrapText="true" />
                                    <TableView fx:id="productSuppliersTableView" prefHeight="200.0">
                                        <columns>
                                            <TableColumn fx:id="supplierNameCol" prefWidth="150.0" text="Supplier" />
                                            <TableColumn fx:id="supplierCodeCol" prefWidth="150.0" text="Supplier's Code" />
                                        </columns>
                                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                                    </TableView>
                                    <HBox spacing="10.0">
                                        <Button fx:id="addSupplierLinkButton" onAction="#handleAddSupplierLink" text="Add Supplier" />
                                        <Button fx:id="editSupplierLinkButton" onAction="#handleEditSupplierLink" text="Edit Code" />
                                        <Button fx:id="removeSupplierLinkButton" onAction="#handleRemoveSupplierLink" text="Remove Link" />
                                    </HBox>
                                </VBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
                <HBox alignment="CENTER" spacing="10.0">
                    <Button fx:id="newButton" text="New" prefWidth="80" onAction="#handleNew"/>
                    <Button fx:id="saveButton" text="Save" prefWidth="80" onAction="#handleSave" />
                    <Button fx:id="deleteButton" text="Delete" prefWidth="80" style="-fx-background-color: #FF6347;" onAction="#handleDelete"/>
                </HBox>
            </children>
        </VBox>
    </right>
</BorderPane>
