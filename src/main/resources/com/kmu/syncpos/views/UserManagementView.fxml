<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kmu.syncpos.controllers.UserManagementController">
    <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
    <top>
        <Label text="User Management" BorderPane.alignment="CENTER">
            <font><Font name="System Bold" size="24.0" /></font>
            <padding><Insets bottom="15.0" /></padding>
        </Label>
    </top>
    <center>
        <VBox spacing="10.0">
            <children>
                <TextField fx:id="searchField" promptText="Search users..." />
                <TableView fx:id="userTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="usernameCol" text="Username" />
                        <TableColumn fx:id="nameCol" prefWidth="180.0" text="Full Name" />
                        <TableColumn fx:id="emailCol" prefWidth="200.0" text="Email" />
                        <TableColumn fx:id="roleCol" text="Role" />
                        <TableColumn fx:id="activeCol" text="Active" />
                    </columns>
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>
    <right>
        <VBox minWidth="320.0" spacing="15.0">
            <BorderPane.margin><Insets left="15.0" /></BorderPane.margin>
            <padding><Insets top="35" /></padding>
            <children>
                <Label text="User Details"><font><Font name="System Bold" size="16.0" /></font></Label>
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints><ColumnConstraints minWidth="80.0" /><ColumnConstraints hgrow="SOMETIMES" /></columnConstraints>
                    <Label text="Username" GridPane.rowIndex="0" />
                    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Label text="Firstname" GridPane.rowIndex="1" />
                    <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label text="Lastname" GridPane.rowIndex="2" />
                    <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label text="Password" GridPane.rowIndex="3" />
                    <PasswordField fx:id="passwordField" promptText="Enter to change" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    <Label text="Email" GridPane.rowIndex="4" />
                    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    <Label text="Phone" GridPane.rowIndex="5" />
                    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                    <Label text="Role" GridPane.rowIndex="6" />
                    <ComboBox fx:id="roleComboBox" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                    <CheckBox fx:id="activeCheckBox" text="Is Active" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                </GridPane>
                <HBox alignment="CENTER" spacing="10.0">
                    <VBox.margin><Insets top="20.0" /></VBox.margin>
                    <Button fx:id="newButton" text="New" prefWidth="80" onAction="#handleNew" />
                    <Button fx:id="saveButton" text="Save" prefWidth="80" onAction="#handleSave" />
                    <Button fx:id="deleteButton" text="Delete" prefWidth="80" style="-fx-background-color: #FF6347;" onAction="#handleDelete" />
                </HBox>
            </children>
        </VBox>
    </right>
</BorderPane>
