<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kmu.syncpos.controllers.SupplierManagementController">
    <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
    <top>
        <Label text="Supplier Management" BorderPane.alignment="CENTER">
            <font><Font name="System Bold" size="24.0" /></font>
            <padding><Insets bottom="15.0" /></padding>
        </Label>
    </top>
    <center>
        <VBox spacing="10.0">
            <children>
                <TextField fx:id="searchField" promptText="Search suppliers by name or contact..." />
                <TableView fx:id="supplierTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nameCol" prefWidth="200.0" text="Name" />
                        <TableColumn fx:id="contactPersonCol" prefWidth="150.0" text="Contact Person" />
                        <TableColumn fx:id="phoneCol" prefWidth="120.0" text="Phone" />
                        <TableColumn fx:id="paymentTermsCol" text="Payment Terms" />
                    </columns>
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>
    <right>
        <VBox minWidth="380.0" spacing="15.0">
            <BorderPane.margin><Insets left="15.0" /></BorderPane.margin>
            <padding><Insets top="35" /></padding>
            <children>
                <Label text="Supplier Details"><font><Font name="System Bold" size="16.0" /></font></Label>
                <GridPane hgap="10" vgap="10">
                    <Label text="Name" GridPane.rowIndex="0" />
                    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Label text="Contact Person" GridPane.rowIndex="1" />
                    <TextField fx:id="contactPersonField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label text="Email" GridPane.rowIndex="2" />
                    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label text="Phone" GridPane.rowIndex="3" />
                    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    <Label text="Address" GridPane.rowIndex="4" />
                    <TextArea fx:id="addressArea" prefHeight="60" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    <Label text="Payment Terms" GridPane.rowIndex="5" />
                    <ComboBox fx:id="paymentTermsComboBox" promptText="e.g., Net 30, COD" editable="true" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                    <Label text="Credit Limit" GridPane.rowIndex="6" />
                    <TextField fx:id="creditLimitField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                </GridPane>
                <HBox alignment="CENTER" spacing="10.0">
                    <padding><Insets top="20.0" /></padding>
                    <Button fx:id="newButton" text="New" prefWidth="80" onAction="#handleNew" />
                    <Button fx:id="saveButton" text="Save" prefWidth="80" onAction="#handleSave" />
                    <Button fx:id="deleteButton" text="Delete" prefWidth="80" style="-fx-background-color: #FF6347;" onAction="#handleDelete" />
                </HBox>
            </children>
        </VBox>
    </right>
</BorderPane>
