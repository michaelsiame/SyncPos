<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kmu.syncpos.controllers.LoginController" style="-fx-background-color: #F4F4F4;" prefHeight="300.0" prefWidth="400.0">
    <children>
        <VBox alignment="CENTER" maxWidth="300.0" spacing="15.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label text="System Login">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Label fx:id="errorLabel" textFill="RED" />
                <TextField fx:id="usernameField" promptText="Username" />
                <PasswordField fx:id="passwordField" promptText="Password" />
                <Button fx:id="loginButton" defaultButton="true" onAction="#handleLogin" prefWidth="100.0" text="Login" />
            </children>
        </VBox>
    </children>
</StackPane>
